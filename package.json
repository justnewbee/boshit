    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "lint-staged": {
    "package.json": "npmPkgJsonLint",
    "*.md": "markdownlint-cli2",
    "*.{js,ts,tsx}": "eslint",
    "*.{css,less}": "stylelint"
  },
  "scripts": {
    "prepare": "husky install",
    "boot": "pnpm clean && pnpm i --no-lockfile",
    "boot:packages": "pnpm -r run prepublishOnly",
    "clean:build": "rm -rf packages-*/**/build",
    "clean:node_modules": "rm -rf node_modules packages-*/**/node_modules demos/**/node_modules",
    "clean": "npm run clean:build && npm run clean:node_modules",
    "ncu:packages": "pnpm -r exec ncu"
  }
}
